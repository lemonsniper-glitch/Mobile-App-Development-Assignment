                        android:textColor="#504F4F"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="335dp"
                        android:backgroundTint="#F8AE3E"
                        android:text="BUY"
                        android:textColor="#504F4F" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="14dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">


                    <ImageView
                        android:id="@+id/imageVfiew11"
                        android:layout_width="310dp"
                        android:layout_height="330dp"
                        app:srcCompat="@drawable/shoes" />

                    <TextView
                        android:id="@+id/textfView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="330dp"
                        android:text="Nike shoes"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textfViewb9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="360dp"
                        android:text="Rs.3000"
                        android:textColor="#504F4F"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="335dp"
                        android:backgroundTint="#F8AE3E"
                        android:text="BUY"
                        android:textColor="#504F4F" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="14dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">


                    <ImageView
                        android:id="@+id/imagerView11"
                        android:layout_width="310dp"
                        android:layout_height="330dp"
                        app:srcCompat="@drawable/sun" />

                    <TextView
                        android:id="@+id/texstView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="330dp"
                        android:text="Aviators"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViefwb9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="360dp"
                        android:text="Rs.2000"
                        android:textColor="#504F4F"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/butfton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="335dp"
                        android:backgroundTint="#F8AE3E"
                        android:text="BUY"
                        android:textColor="#504F4F" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>